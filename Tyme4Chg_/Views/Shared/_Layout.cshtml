<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top navbar-">
        <div class="container-fluid">
                <div class="col-lg-2" style="padding:0; vertical-align:top;">
                    <div style="width:54px; height:54px;">
                        <a class="navbar-brand " href="#" style="width: 50px; height: 50px;">
                            <img src="Logos/TYME4CHG_Logo2.jpg" style="width: 50px; height: 50px; float:left; ">
                        </a>
                    </div>
                    
                </div>
                <div class="col-lg-7">
                    <div class="navbar-header" style="padding-top:10px">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Tyme4Chg", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="navbar-collapse collapse" style="padding-top:10px; float:right;">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    <div class="container body-content" style="padding-top:20px;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Tyme 4 Change</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
